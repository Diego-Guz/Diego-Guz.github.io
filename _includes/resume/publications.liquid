<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign publications = data[1] | sort: 'releaseDate' | reverse %}
  {% for content in publications %}
    <li class="list-group-item">
      <div class="row align-items-center">
        <!-- date column -->
        <div class="col-xs-2 col-sm-2 col-md-2 text-center date-column">
          {% if content.releaseDate %}
            {% assign date = content.releaseDate | split: '-' | join: '.' %}
          {% else %}
            {% assign date = '' %}
          {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                    {{ date }}
                  </span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- optional image column -->
        {% if content.img or content.image %}
          <div class="col-xs-2 col-sm-2 col-md-2 text-center">
            <img
              src="{{ content.img | default: content.image }}"
              alt="{{ content.name }}"
              style="max-width: 100%; height: auto; margin: 0 auto;"
            >
          </div>
          <div class="col-xs-8 col-sm-8 col-md-8 mt-2 mt-md-0">
        {% else %}
          <div class="col-xs-10 col-sm-10 col-md-10 mt-2 mt-md-0">
        {% endif %}

            <!-- title, publisher, summary -->
            <h6 class="title font-weight-bold ml-1 ml-md-4">
              <a href="{{ content.url }}">{{ content.name }}</a>
            </h6>
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">
              {{ content.publisher }}
            </h6>
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">
              {{ content.summary }}
            </h6>
          </div>
      </div>
    </li>
  {% endfor %}
</ul>
